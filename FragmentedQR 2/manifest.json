{
  "name": "Fragmented Text to QR//FragmentedQR 2",
  "version": "2.0.0",
  "manifest_version": 2,
  "minimum_chrome_version": "80",
  "author": "Yonah Aviv",
  "short_name": "text-QR",
  "description":"Browser extension that allows for the generation of QR codes linking to arbitrary text on a page.",
  "background": {
    "persitent": false,
    "scripts": ["js/background_script.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["js/content_script.js"],
      "css": ["css/content.css"]
    }
  ],
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "http://*/*",
    "https://*/*"
  ],
  "options_page": "options.html",
  "browser_action": {
    "default_title": "Generate QR for Selected Text",
    "default_icon": {
      "128": "img/64.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "512": "img/512.png",
    "128": "img/128.png",
    "64": "img/64.png",
    "32": "img/32.png",
    "16": "img/16.png"
  },
  "offline_enabled": true,

  "commands": {
    "copy_link": {
      "description": "__MSG_copy_link__",
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      }
    }
  }
}
